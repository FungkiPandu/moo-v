<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/preferences">
        <Preference
            app:icon="@drawable/ic_g_translate_white_24dp"
            app:key="@string/language"
            app:summary="Current language"
            app:title="@string/language" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/reminder">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/airing_today_reminder_key"
            app:summary="@string/airing_today_reminder_summary"
            app:title="@string/airing_today_reminder" />

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/release_reminder_key"
            app:summary="@string/release_reminder_summary"
            app:title="@string/release_reminder" />

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/daily_reminder_key"
            app:summary="@string/daily_reminder_summary"
            app:title="@string/daily_reminder" />

    </PreferenceCategory>

</PreferenceScreen>
